<% layout("/layouts/boilerplate.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card p-4 shadow-lg">
                <h2 class="text-center mb-4 text-info">Book Your Room</h2>
                <hr class="my-4 text-white-50">
                <form id="bookingForm" class="d-flex flex-column gap-4" action="/book" method="post">

                    <div class="mb-3">
                        <label for="roomId" class="form-label fw-medium text-light">Select Room:</label>
                        <select name="roomId" id="roomId" class="form-select bg-dark text-white border-secondary" required>
                            <option value="" disabled selected>-- Choose a Room --</option>
                            <% for(let room of rooms){ %>
                                <option value="<%= room._id %>"><%= room.name %></option>
                            <% } %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="date" class="form-label fw-medium text-light">Select Date:</label>
                        <input type="date" id="date" name="date" class="form-control bg-dark text-white border-secondary" required />
                    </div>

                    <div class="mb-3">
                        <label for="startTime" class="form-label fw-medium text-light">Start Time:</label>
                        <input type="time" id="startTime" name="stTime" class="form-control bg-dark text-white border-secondary" required />
                    </div>

                    <div class="mb-3">
                        <label for="endTime" class="form-label fw-medium text-light">End Time:</label>
                        <input type="time" id="endTime" name="endTime" class="form-control bg-dark text-white border-secondary" required />
                    </div>

                    <div class="d-grid mt-2">
                        <button class="btn btn-outline-success fw-bold" type="submit">Book Room</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Restrict date to today onwards
    const today = new Date();
    const yyyy = today.getFullYear();
    const mm = String(today.getMonth() + 1).padStart(2, '0');
    const dd = String(today.getDate()).padStart(2, '0');
    const todayStr = `${yyyy}-${mm}-${dd}`;

    const dateInput = document.getElementById("date");
    const startTimeInput = document.getElementById("startTime");
    const endTimeInput = document.getElementById("endTime");

    dateInput.min = todayStr;

    // Restrict time if selected date = today
    dateInput.addEventListener("change", () => {
        if (dateInput.value === todayStr) {
            const hh = String(today.getHours()).padStart(2, '0');
            const min = String(today.getMinutes()).padStart(2, '0');
            const nowTime = `${hh}:${min}`;
            startTimeInput.min = nowTime;
        } else {
            startTimeInput.removeAttribute("min"); // allow full range on future dates
        }
    });

    // Ensure end time is always after start time
    startTimeInput.addEventListener("change", () => {
        endTimeInput.min = startTimeInput.value;
    });
</script>