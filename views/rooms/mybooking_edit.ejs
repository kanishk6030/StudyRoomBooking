<% layout("/layouts/boilerplate.ejs") %>
<body class="row-8">
    <h2 class="col-6 offset-3 mt-5 text-center">Edit Your Date and Time</h2>
    <hr class="col-6 offset-3 border-2">
    <div class="col-6 offset-3  mt-5">
        <form id="bookingForm" class="d-flex flex-column gap-4" action="/book/my/edit/<%= booking._id %>?_method=PUT" method="post">

        <label for="room" class="fw-medium">Select Room:</label>
        <select name="roomId" disabled required>
            <option><%= room.name %></option>
        </select>

        <div>
            <label for="date" class="fw-medium">Select Date:</label>
            <input type="date" id="date" name="date" value="<%= booking.date %>" required />
        </div>

        <div>
            <label for="startTime" class="fw-medium">Start Time:</label>
            <input type="time" id="startTime" name="stTime" value="<%= booking.startTime  %>"required />
        </div>

        <div>
            <label for="endTime" class="fw-medium">End Time:</label>
            <input type="time" id="endTime" name="endTime" value="<%= booking.endTime  %>" required />
        </div>

        <button class="btn btn-outline-primary" type="submit">Make Changes</button>
        </form>
    </div>
    
</body>