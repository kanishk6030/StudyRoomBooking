<% layout("/layouts/boilerplate.ejs") %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <h3 class="text-center mb-4 text-info">Your Bookings</h3>
            <hr class="my-4 text-white-50">
            <% if (bookings && bookings.length > 0) { %>
                <% for(let booking of bookings) { %>
                    <div class="card my-4 shadow-lg bg-dark text-white border-secondary">
                        <div class="card-header d-flex justify-content-between align-items-center bg-dark text-muted border-secondary">
                            <span class="text-white-50">Room ID: <%= booking.room._id %></span>
                            <% if(booking.checkedIn) { %>
                                <span class="badge bg-success-subtle text-success border border-success">Checked In</span>
                            <% } %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-info mb-3"><%= booking.room.name %></h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-dark text-white border-secondary">
                                    <strong>Date:</strong> <%= booking.date %> 
                                </li>
                                <li class="list-group-item bg-dark text-white border-secondary">
                                    <strong>Time Slot:</strong> <%= booking.startTime %> - <%= booking.endTime %>
                                </li>
                            </ul>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <% if(!booking.checkedIn) { %>
                                    <a href="/book/my/edit/<%= booking._id %>/<%= booking.room._id %>" class="btn btn-outline-info">Edit</a>
                                <% } %>
                                <form action="/book/my/<%= booking._id %>?_method=DELETE" method="post">
                                    <button class="btn btn-danger">Cancel</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="text-center my-5">
                    <h4 class="text-muted">
                        You have no upcoming bookings.
                    </h4>
                </div>
            <% } %>
        </div>
    </div>
</div>