<% layout("/layouts/boilerplate.ejs") %>

<div class="container-fluid py-5 text-center hero-section" >
    <h1 class="display-4 fw-bolder text-white text-shadow-dark">STUDY ROOM BOOKINGS</h1>
    <p class="lead text-white text-shadow-dark">Find and book your perfect study space.</p>
</div>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card p-4 shadow-lg mb-5">
                <form action="/search/" method="GET" class="d-flex align-items-center justify-content-center">
                    <label for="selected_date" class="form-label me-3 fw-bold text-secondary mb-0">Search by Date:</label>
                    <input type="date" name="selected_date" id="selected_date" class="form-control me-3" style="width: 250px;">
                    <button class="btn btn-primary fw-bold">Search</button>
                </form>
            </div>
            
            <% if(selected_date) { %>
            <div class="text-center mb-4">
                <h4 class="text-white-50">Rooms Available on: <span class="fw-bold"><%= selected_date %></span></h4>
            </div>
            <% } %>

            <hr class="my-4">

            <% if(selected_rooms && selected_rooms.length > 0) { %>
            <div class="d-flex flex-wrap justify-content-center gap-4">
                <% for(let room of selected_rooms){ %>
                <div class="card room-card shadow-sm" style="width: 20rem">
                    <img src="<%= room.imageUrl %>" class="card-img-top" alt="Study room image">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary"><%= room.name %></h5>
                        <p class="card-text text-white">Capacity: <%= room.capacity %></p>
                        <p class="card-text text-muted">
                            Available Date: <%= room.date.toLocaleDateString("en-IN",{ day:"2-digit", month:"long", year:"numeric" }) %>
                        </p>
                        <a href="/book" class="btn btn-success d-grid mt-3 fw-bold">Book Now</a>
                    </div>
                </div>
                <% } %>
            </div>
            <% } else if(selected_rooms) { %>
            <div class="text-center my-5">
                <h4 class="text-white-50">
                    No rooms available. Please try a different date.
                </h4>
            </div>
            <% } %>

        </div>
    </div>
</div>

<style>
    .hero-section {
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 40vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .text-shadow-dark {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }
    .room-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }
    .room-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>