<% layout("./layouts/boilerplate.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <h2 class="text-center mb-4 text-info">Manage Rooms</h2>
            <hr class="my-4 text-white-50">
            <div class="table-responsive">
                <table class="table table-dark table-striped text-center align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Room Name</th>
                            <th scope="col">Capacity</th>
                            <th scope="col">Available Date</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (rooms && rooms.length > 0) { %>
                            <% for(let room of rooms) { %>
                                <tr>
                                    <td><%= room.name %></td>
                                    <td><%= room.capacity %></td>
                                    <td><%= room.date.toLocaleDateString("en-IN",{
                                        day:"2-digit",
                                        month:"long",
                                        year:"numeric"
                                        }) %>
                                    </td>
                                    <td>
                                        <form action="/admin/room/manage/delete/<%= room._id %>?_method=DELETE" method="post">
                                            <button class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center text-muted">No rooms available to manage.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>