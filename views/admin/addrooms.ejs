<% layout("./layouts/boilerplate.ejs") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card p-4 shadow-lg">
        <h2 class="text-center mb-4 text-info">Add a New Room</h2>
        <hr class="my-4 text-white-50">

        <form id="bookingForm"
              class="d-flex flex-column gap-4 needs-validation"
              action="/admin/room"
              method="post"
              enctype="multipart/form-data">

          <div class="mb-3">
            <label for="room_name" class="form-label fw-medium text-light">Room Name</label>
            <input type="text" id="room_name" name="room_name"
                   class="form-control bg-dark text-white border-secondary" required>
          </div>

          <div class="mb-3">
            <label for="room_capacity" class="form-label fw-medium text-light">Capacity</label>
            <input type="number" id="room_capacity" name="room_capacity"
                   class="form-control bg-dark text-white border-secondary" required>
          </div>

          <div class="mb-3">
            <label for="room_date" class="form-label fw-medium text-light">Available Date</label>
            <input type="date" id="room_date" name="room_date"
                   class="form-control bg-dark text-white border-secondary" required>
          </div>

          <!-- New Image Upload Field -->
          <div class="mb-3">
            <label for="room_image" class="form-label fw-medium text-light">Room Image</label>
            <input type="file" id="room_image" name="room_image"
                   class="form-control bg-dark text-white border-secondary"
                   accept="image/*" required>
          </div>

          <div class="d-grid mt-2">
            <button class="btn btn-outline-info fw-bold" type="submit">Add Room</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
